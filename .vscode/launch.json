{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch and Debug Standalone Blazor WebAssembly App",
      "type": "blazorwasm",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "url": "https://localhost:7194"
    },
    {
      "name": "Watch",
      "type": "blazorwasm",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "dotnet",
      "args": ["watch"],
      "preLaunchTask": "build" // Ensure we don't watch an unbuilt site
    }
  ]
}
